model Adjustment {
  adjustment_id   String            @id @default(uuid())
  order_id        String?
  adjustment_type AdjustmentType
  value_type      ValueDiscountType
  value           Decimal           @db.Decimal(12, 2)
  applied_amount  Decimal           @db.Decimal(12, 2)
  reason          String?
  created_at      DateTime          @default(now())
  updated_at      DateTime          @updatedAt
  cart_id         String            @unique
  cart            Cart              @relation(fields: [cart_id], references: [cart_id], onDelete: Cascade)
  order           Order?            @relation(fields: [order_id], references: [order_id], onDelete: Cascade)

  @@index([order_id], map: "Adjustment_order_id_fkey")
}

enum AdjustmentType {
  VOUCHER
  FLASHSALE
  COMBO
  MANUAL
}
