model Refund {
    refund_id       String          @id @default(uuid())

    order_id        String
    order           Order           @relation(fields: [order_id], references: [order_id], onDelete: Restrict)

    reason          String
    amount          Decimal         @db.Decimal(12,2)
    status          RefundStatus    @default(PENDING)

    created_at      DateTime        @default(now())
    processed_at    DateTime?
    admin_id        String?
    admin           User?           @relation(fields: [admin_id], references: [user_id], onDelete: SetNull)
    note            String?
}

enum RefundStatus {
    PENDING
    REJECTED
    APPROVED
    COMPLETED
}
