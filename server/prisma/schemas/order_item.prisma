model OrderItems {
  order_item_id      String         @id @default(uuid())
  order_id           String
  quantity           Int
  unit_price         Decimal        @db.Decimal(12, 2)
  promotion          Decimal        @db.Decimal(12, 2)
  final_price        Decimal        @db.Decimal(12, 2)
  subtotal           Decimal        @db.Decimal(12, 2)
  product_variant_id String
  order              Order          @relation(fields: [order_id], references: [order_id], onDelete: Cascade)
  product_variant    ProductVariant @relation(fields: [product_variant_id], references: [product_variant_id])

  @@index([order_id], map: "OrderItems_order_id_fkey")
  @@index([product_variant_id], map: "OrderItems_product_variant_id_fkey")
}
