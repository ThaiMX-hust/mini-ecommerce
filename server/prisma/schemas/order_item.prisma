model OrderItems {
    order_item_id String  @id @default(uuid())
    order_id      String
    product_id    String
    quantity      Int
    unit_price    Decimal
    promotion     Decimal
    final_price   Decimal
    subtotal      Decimal

    order   Order   @relation(fields: [order_id], references: [order_id], onDelete: Cascade)
    product Product @relation(fields: [product_id], references: [product_id], onDelete: Restrict)
}
