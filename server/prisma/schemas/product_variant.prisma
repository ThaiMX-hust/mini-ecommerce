model ProductVariant {
    product_variant_id String   @id @default(uuid())
    product_id         String
    sku                String   @unique
    raw_price          Decimal  @db.Decimal(12, 2)
    stock_quantity     Int
    is_disabled        Boolean
    created_at         DateTime
    updated_at         DateTime

    Product              Product                @relation(fields: [product_id], references: [product_id], onDelete: Cascade)
    ProductVariantOption ProductVariantOption[]
    OrderItem            OrderItems[]
    CartItems            CartItems[]
}
