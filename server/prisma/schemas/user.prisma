model User {
  user_id            String               @id @default(uuid())
  first_name         String
  last_name          String
  email              String               @unique
  avatar_url         String?
  password_hash      String
  role               UserRole
  created_at         DateTime             @default(now())
  updated_at         DateTime             @updatedAt
  deleted_at         DateTime?
  locked             Boolean              @default(false)
  Cart               Cart?
  Order              Order[]
  refundsProcessed   Refund[]
  Review             Review[]
  UserVoucherHistory UserVoucherHistory[]

  @@map("user")
}

enum UserRole {
  CUSTOMER
  ADMIN
}
